@import "../../../ripples.wxss";

.selector{
  width: 100%;
  height: 75rpx;
  position: fixed;  
  z-index: 10;
  border: 0px solid white;
}
.selector_part{
  font-size:13px; 
  width: 50%;
  height: 100%;
  float: left;
  text-align: center;
  background-color: white;
  border: 0px solid white;
  /* 可复用 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.selector_txt{
  height: 50rpx;
  font-size: 25rpx;
  color: #666666;
  margin-top: 22rpx;
  border: 0px solid white;
}
.border-item{
  width: 80%;
  height: 5rpx;
  border: 0px solid white;
}

.scroll{
  width: 100%;
  height: 1600rpx;
  background-color: #f8f8f8;
  position: absolute;
  margin-top: 75rpx;
  z-index: -1;
}
.items{
  width: 100%;
  height: auto;
  margin-top: 8rpx;
  background-color: white
}
.items_1{
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 15rpx;
}
.items_2{  
  width: 100%;
  height: 50rpx;
  font-size: 24rpx;
  color: #a6a6a6;
  display: flex;
  align-items: center;
  margin-left: 15rpx;
}
.items_3{
  width: 100%;
  height: 80rpx;
  font-size: 26rpx;
  color: #000000;
  margin-top: 10rpx;
  margin-left: 15rpx;  
}
.items_4{
  width: 96%;
  height: 180rpx;
  margin-left: 2%;
  margin-top: 2rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;  
}
.items_5{
  height: 100rpx;
  margin-left: 15rpx;
}
.cus_icon{
  width: 50rpx;
  height: 50rpx;
  border-radius: 120rpx;
  margin: 10rpx;
}
.cus_txt{
  font-size: 26rpx;
  margin-left: 10rpx;
}
.items_5_txt{
  font-size: 22rpx;
  color: #a6a6a6;
  float: left;
  margin-top: 40rpx;
}
.items_5_icon{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 6rpx;
}
.items_5_do{
  width: 120rpx;
  height:35rpx;
  font-size: 22rpx;
  color: #ff9900;
  border-radius: 40rpx;
  border: 2rpx solid #ff9900;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  float: right;
  margin-right: 25rpx;
  margin-top: 40rpx;
}

.items_4_icon{
  width: 180rpx;
  height: 180rpx;
  float: left
}
.items_4_main{
  height: 180rpx;
  width: 720rpx;
}
.items_4_main_up{
  height: 110rpx;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.items_4_main_down{
  font-size: 30rpx;
  font-weight: 900;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.callbacks{
  font-size: 26rpx;
  color: #ff9900;
  margin-left: 15rpx;
  height: auto;
}
.callbacks_input{
  font-size: 26rpx;
  width: 96%;
  margin-left: 15rpx;
  background-color: white;
  height: auto;
  animation: swing 1s;
  position: fixed;
  bottom: 0;
}
.callbacks_input_head{
  height: 60rpx;
  background-color: #f2f2f2;
  display: flex;
  align-items: center
}
.callbacks_input_txt{
  height: 60rpx;
  display: flex;
  position: absolute;
  right: 25rpx;
  align-items: center;
  font-size: 28rpx;
  color: #00cc00
}
.callbacks_input_icon{
  width: 35rpx;
  height: 35rpx;
  margin-left: 10rpx;
}
.callbacks_input_icon_txt{
  height: 60rpx;
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #666666;
}
.input{
  border: 1px solid #f2f2f2;
  height: 100rpx;
}