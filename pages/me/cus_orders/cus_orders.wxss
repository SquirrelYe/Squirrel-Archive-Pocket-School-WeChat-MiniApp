@import "../../../ripples.wxss";
/* pages/me/orders/orders.wxss */
.selector{
  width: 100%;
  height: 75rpx;
  position: fixed;  
  z-index: 10;
  border: 0px solid white;
}
.selector_part{
  font-size:13px; 
  width: 20%;
  height: 100%;
  float: left;
  text-align: center;
  background-color: white;
  border: 0px solid white;
}
.selector_txt{
  height: 50rpx;
  font-size: 25rpx;
  color: #666666;
  margin-top: 22rpx;
  border: 0px solid white;
}
.border-item{
  width: 80%;
  height: 5rpx;
  margin-left: 5px;  
  border: 0px solid white;
}

.items_scroll{
  position: absolute;
  margin-top: 75rpx;
  width: 100%;
  height: auto;
  background-color: #f8f8f8;
}
.items_item{
  width: 100%;
  height: auto;
}
.apart{
  width: 100%;
  height: 18rpx;
}
.p1{
  width: 100%;
  height: 75rpx;
  background-color: white
}
.p2{
  width: 100%;
  height: 160rpx;
  background-color: #f8f8f8;
}
.p3{
  width: 100%;
  height: 62rpx;
  background-color: white
}
.p4{
  width: 100%;
  height: 73rpx;
  background-color: white
}
.title_icon{
  width: 35rpx;
  height: 35rpx;
  margin: 20rpx;
  float: left
}
.title_txt{
  font-size: 25rpx;
  height: 40rpx;
  margin-top: 20rpx;
  color: #666666;
  float: left
}
.title_condition{
  float: right;
  color: #ff9900;
  font-size: 25rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.main_icon{
  width: 160rpx;
  height: 160rpx;
  float: left
}
.main_txt{
  float: left;
  font-size: 25rpx;
  width: 450rpx;
  color: #666666;
}
.main_others{
  float: right;
  height: 160rpx;
  width: 140rpx;
}
.main_others_money{
  color: #000000;
  font-weight: 900;
  font-size: 25rpx;
  float: right;
  margin-right: 20rpx;
}
.main_others_sum{
  color: #666666;
  font-size: 24rpx;
  margin-top: 40rpx;
  position: absolute;
  margin-right: 20rpx;
  right: 0
}

.time{
  font-size: 25rpx;
  color: #666666;
  margin-top: 15rpx;
  float: left
}
.sum{
  float: right;
  margin-right: 20rpx;
  font-size: 25rpx;
  height: 25rpx;
  margin-top: 15rpx;
  color: #666666;
}

.bottom{
  width: 115rpx;
  height:50rpx;
  font-size: 26rpx;
  color: #000000;
  border-radius: 40rpx;
  border: 2rpx solid #666666;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  float: right;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.filter1{
  width: 100%;
  height: 300rpx;
  position: fixed;
  bottom: 0;
  background-color: white;
  z-index: 2;
  animation: swing 1s
}
.title{
  width: 96%;
  height: 80rpx;
  background-color: white;
  font-size: 29rpx;
  display: flex;
  align-items: center;
  margin-left: 15rpx;
  margin-top: 10rpx;
}
.parts1{
  width: 96%;
  height: 100rpx;
  background-color: white;
  margin-left: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.parts_2{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  background-color: #f8f8f8
}
.input{
  width: 100%;
}
.filter_bottom_part1{
  width: 50%;
  height: 90rpx;
  background-color: white;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 29rpx;
}
.filter_bottom_part2{
  width: 50%;
  height: 90rpx;
  background-color: #00cc00;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 29rpx;
}
.filter_bottom{
  width: 100%;
  height: 90rpx;
  background-color: black;
  position: absolute;
  bottom: 0;
}